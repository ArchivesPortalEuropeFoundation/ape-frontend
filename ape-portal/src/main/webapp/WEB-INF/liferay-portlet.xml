<?xml version="1.0"?>
<!DOCTYPE liferay-portlet-app PUBLIC "-//Liferay//DTD Portlet Application 6.1.0//EN" "http://www.liferay.com/dtd/liferay-portlet-app_6_1_0.dtd">

<liferay-portlet-app>
	<portlet>
		<portlet-name>simplesearch</portlet-name>
		<configuration-action-class>com.liferay.portal.kernel.portlet.DefaultConfigurationAction</configuration-action-class>
		<instanceable>false</instanceable>
		<header-portlet-javascript>/js/simplesearch/simplesearch.js</header-portlet-javascript>
	</portlet>
	<portlet>
		<portlet-name>advancedsearch</portlet-name>
		<friendly-url-mapper-class>com.liferay.portal.kernel.portlet.DefaultFriendlyURLMapper</friendly-url-mapper-class>
		<friendly-url-mapping>s</friendly-url-mapping>
		<friendly-url-routes>search-url-routes.xml</friendly-url-routes>
		<instanceable>false</instanceable>
		<header-portlet-javascript>/js/advancedsearch/search.js</header-portlet-javascript>
		<header-portlet-javascript>/js/advancedsearch/trees.js</header-portlet-javascript>
	</portlet>
	<portlet>
		<portlet-name>savedsearch</portlet-name>
		<instanceable>false</instanceable>
	</portlet>
	<portlet>
		<portlet-name>directory</portlet-name>
		<friendly-url-mapper-class>com.liferay.portal.kernel.portlet.DefaultFriendlyURLMapper</friendly-url-mapper-class>
		<friendly-url-mapping>dir</friendly-url-mapping>
		<friendly-url-routes>directory-url-routes.xml</friendly-url-routes>
		<instanceable>false</instanceable>
		<header-portlet-javascript>/js/directory/directory.js</header-portlet-javascript>
	</portlet>
	<portlet>
		<portlet-name>eaddisplay</portlet-name>
		<friendly-url-mapper-class>com.liferay.portal.kernel.portlet.DefaultFriendlyURLMapper</friendly-url-mapper-class>
		<friendly-url-mapping>ead</friendly-url-mapping>
		<friendly-url-routes>ead_display-url-routes.xml</friendly-url-routes>
		<instanceable>false</instanceable>
		<header-portlet-javascript>/js/ead/ead.js</header-portlet-javascript>
	</portlet>
	<portlet>
		<portlet-name>contact</portlet-name>
		<instanceable>false</instanceable>
		<header-portlet-javascript>/js/contact/contact.js</header-portlet-javascript>

	</portlet>
	<portlet>
		<portlet-name>language</portlet-name>
		<instanceable>false</instanceable>
	</portlet>
	<portlet>
		<portlet-name>featured-exhibition-frontpage</portlet-name>
		<configuration-action-class>com.liferay.portal.kernel.portlet.DefaultConfigurationAction</configuration-action-class>
		<instanceable>false</instanceable>
	</portlet>
	<portlet>
		<portlet-name>featured-exhibition-details</portlet-name>
		<configuration-action-class>com.liferay.portal.kernel.portlet.DefaultConfigurationAction</configuration-action-class>
		<friendly-url-mapper-class>com.liferay.portal.kernel.portlet.DefaultFriendlyURLMapper</friendly-url-mapper-class>
		<friendly-url-mapping>fed</friendly-url-mapping>
		<friendly-url-routes>featured-exhibition-url-routes.xml</friendly-url-routes>		
		<instanceable>false</instanceable>
		<header-portlet-css>/css/featured-exhibition/multizoom.css</header-portlet-css>
  		<header-portlet-javascript>/js/featured-exhibition/multizoom.js</header-portlet-javascript>
	</portlet>
	<role-mapper>
		<role-name>administrator</role-name>
		<role-link>Administrator</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>guest</role-name>
		<role-link>Guest</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>power-user</role-name>
		<role-link>Power User</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>user</role-name>
		<role-link>User</role-link>
	</role-mapper>
