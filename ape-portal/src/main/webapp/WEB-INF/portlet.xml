<?xml version="1.0"?>

<portlet-app version="2.0"
	xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd">
	<portlet>
		<portlet-name>simplesearch</portlet-name>
		<display-name>simple Search${artifact.suffix}</display-name>
		<portlet-class>org.springframework.web.portlet.DispatcherPortlet</portlet-class>
        <init-param>
            <name>config-jsp</name>
            <value>/WEB-INF/jsp/simplesearch/configuration.jsp</value>
        </init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
		</supports>
		<resource-bundle>i18n.ApplicationResources</resource-bundle>
		<portlet-info>
			<title>Simple Search${artifact.suffix}</title>
			<short-title>Simple Search${artifact.suffix}</short-title>
			<keywords>simple-search</keywords>
		</portlet-info>
        <portlet-preferences>
            <preference>
                <name>advancedSearchFriendlyUrl</name>
                <value>/advanced-search</value>
                <read-only>false</read-only>
            </preference>
            <preference>
                <name>advancedSearchPortletName</name>
                <value>advancedsearch</value>
                <read-only>false</read-only>
            </preference>
            <preference>
                <name>numberOfDaoUnits</name>
                <value>63781468</value>
                <read-only>false</read-only>
            </preference>
        </portlet-preferences>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
	<portlet>
		<portlet-name>advancedsearch</portlet-name>
		<display-name>Advanced Search${artifact.suffix}</display-name>
		<portlet-class>org.springframework.web.portlet.DispatcherPortlet</portlet-class>
        <init-param>
            <name>config-jsp</name>
            <value>/WEB-INF/jsp/advancedsearch/configuration.jsp</value>
        </init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
		</supports>
		<resource-bundle>i18n.ApplicationResources</resource-bundle>
		<portlet-info>
			<title>Advanced Search${artifact.suffix}</title>
			<short-title>Advanced Search${artifact.suffix}</short-title>
			<keywords>advanced-search</keywords>
		</portlet-info>
        <portlet-preferences>
            <preference>
                <name>eadDisplayFriendlyUrl</name>
                <value>/ead-display</value>
                <read-only>false</read-only>
            </preference>
            <preference>
                <name>eadDisplayPortletName</name>
                <value>eaddisplay</value>
                <read-only>false</read-only>
            </preference>
        </portlet-preferences>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
	<portlet>
		<portlet-name>directory</portlet-name>
		<display-name>Directory${artifact.suffix}</display-name>
		<portlet-class>org.springframework.web.portlet.DispatcherPortlet</portlet-class>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
		</supports>
		<resource-bundle>i18n.ApplicationResources</resource-bundle>
		<portlet-info>
			<title>Directory${artifact.suffix}</title>
			<short-title>Directory${artifact.suffix}</short-title>
			<keywords>Directory</keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>	
	<portlet>
		<portlet-name>eaddisplay</portlet-name>
		<display-name>EAD Display${artifact.suffix}</display-name>
		<portlet-class>org.springframework.web.portlet.DispatcherPortlet</portlet-class>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
		</supports>
		<resource-bundle>i18n.ApplicationResources</resource-bundle>
		<portlet-info>
			<title>EAD Display${artifact.suffix}</title>
			<short-title>EAD Display${artifact.suffix}</short-title>
			<keywords>EAD Display</keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>

    <portlet>
        <portlet-name>contact</portlet-name>
        <display-name>Contact${artifact.suffix}</display-name>
        <portlet-class>org.springframework.web.portlet.DispatcherPortlet</portlet-class>
        <expiration-cache>0</expiration-cache>
        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>view</portlet-mode>
        </supports>
        <resource-bundle>i18n.ApplicationResources</resource-bundle>
        <portlet-info>
            <title>Contact${artifact.suffix}</title>
            <short-title>Contact${artifact.suffix}</short-title>
            <keywords>Contact</keywords>
        </portlet-info>
        <security-role-ref>
            <role-name>administrator</role-name>
        </security-role-ref>
        <security-role-ref>
            <role-name>guest</role-name>
        </security-role-ref>
        <security-role-ref>
            <role-name>power-user</role-name>
        </security-role-ref>
        <security-role-ref>
            <role-name>user</role-name>
        </security-role-ref>
    </portlet>



    <filter>
		<filter-name>APEFilter</filter-name>
		<filter-class>eu.archivesportaleurope.portal.common.APEFilter</filter-class>
		<lifecycle>ACTION_PHASE</lifecycle>
		<lifecycle>RESOURCE_PHASE</lifecycle>
		<lifecycle>RENDER_PHASE</lifecycle>
		<lifecycle>EVENT_PHASE</lifecycle>
	</filter>
	<filter-mapping>
		<filter-name>APEFilter</filter-name>
		<portlet-name>advancedsearch</portlet-name>
	</filter-mapping>
    <filter-mapping>
        <filter-name>APEFilter</filter-name>
        <portlet-name>directory</portlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>APEFilter</filter-name>
        <portlet-name>simplesearch</portlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>APEFilter</filter-name>
        <portlet-name>eaddisplay</portlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>APEFilter</filter-name>
        <portlet-name>contact</portlet-name>
    </filter-mapping>
</portlet-app>