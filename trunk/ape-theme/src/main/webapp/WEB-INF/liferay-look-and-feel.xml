<?xml version="1.0"?>
<!DOCTYPE look-and-feel PUBLIC "-//Liferay//DTD Look and Feel 6.1.0//EN" "http://www.liferay.com/dtd/liferay-look-and-feel_6_1_0.dtd">

<look-and-feel>
	<compatibility>
		<version>6.1.0+</version>
	</compatibility>
	<theme id="ape" name="Archives Portal Europe">

		<settings>
			<setting key="portlet-setup-show-borders-default" value="false" />
		</settings>
		<color-scheme id="01" name="Default">
			<css-class>default</css-class>
		</color-scheme>
		<color-scheme id="02" name="Full width">
			<css-class>fullwidth</css-class>
		</color-scheme>
	</theme>
	<theme id="ape-widget" name="Archives Portal Europe - Widget">
		<templates-path>${root-path}/widget/templates</templates-path>
		<css-path>${root-path}/widget/css</css-path>
		<javascript-path>${root-path}/widget/js</javascript-path>		
		<settings>
			<setting key="portlet-setup-show-borders-default" value="false" />
		</settings>
		
	</theme>
</look-and-feel>